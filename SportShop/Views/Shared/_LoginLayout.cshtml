<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
 
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .logo {
            font-size: 20px;
            padding: 10px 30px;
            margin-left: 41%;
        }

        .menu {
            width: 100%;
            height: 50px;
            border-bottom: thin solid #c1bbbb;
            text-align: center;
            display: flex;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background-color: white;
        }

        #back {
            padding: 12px 10px;
        }

        .main {
            margin: 60px 30px;
        }

        a {
            text-decoration: none;
        }
    </style>
</head>

<body>
    <script src="~/Content/fontWareSome/js/all.js"></script>
    <script src="~/Scripts/Script.js"></script>
    <div class="menu">
        <div id="back"> @Html.ActionLink("Back", "Index", "Product")</div>

        <div class="logo"><a href="@Url.Action("Index","Product")"> Sp<i class="fa-solid fa-fire-flame-curved"></i>rtStore</a></div>
    </div>

    <div class="main">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
