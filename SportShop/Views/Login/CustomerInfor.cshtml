@model SportShop.Models.AdminUser

@{
    ViewBag.Title = "Information";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<style>
    tr{
        border-bottom:2px solid #dbd4d4;
    }
    td{
        padding:10px 0;
    }
    .info{
        width:100%;
        height:500px;
       
    }
    table{
        width:100%;
        font-size:xx-large;
        border-collapse:collapse;
        font-family:Arial;
    }
    .label {
        width: 30%;
       
        font-weight:600;
    }
    .CusInfo{
        width:70%;
    }
    h1{
        background-color:darkblue;
        padding:10px 30px;
        border-radius:40px 100px;
        color:white;
        font-family:Arial;
    }
    .GoToCartBtn{
        font-size:large;
        border:none;
        padding:10px 20px;
        font-weight:600;
        border-radius:10px;
        font-family:Arial;
        margin-left:10px;
    }
    .GoToCartBtn:hover{
        cursor:pointer;
    }
    .ManagerBtn {
        font-size: large;
        border: none;
        padding: 10px 20px;
        font-weight: 600;
        border-radius: 10px;
        font-family: Arial;
        margin-right: 10px;
        background-color:darkblue;
        color:white;
    }
    .ManagerBtn:hover {
        cursor: pointer;
    }
</style>
<div class="info"> 
    <h1>Personal Information</h1>
    <table class="col-lg-12 col-sm-12 col-md-12">
        <tr>
            <td class="label">@Html.DisplayNameFor(model => model.ID):</td>
            <td class="CusInfo">@Session["ID"]</td>
        </tr>
        <tr>
            <td class="label">@Html.DisplayNameFor(model => model.NameUser):</td>
            <td class="CusInfo">@Session["NameUser"]</td>
        </tr>
        <tr>
        <tr>
            <td class="label">@Html.DisplayNameFor(model => model.PhoneNumber):</td>
            <td class="CusInfo">@Session["PhoneNumber"]</td>
        </tr>
        <tr style="border-bottom:none;">
            <td class="label">@Html.DisplayNameFor(model => model.gmail):</td>
            <td class="CusInfo">@Session["Gmail"]</td>
        </tr>
        <tr style="border-bottom:none;text-align:right">
            <td></td>
            @if (Session["RoleUser"] !=null)
            {
                <td><a href="@Url.Action("Index","Manager")"><input type="button" class="ManagerBtn" value="Manager" /></a></td>
            }
        <td style="margin-right:10px">
            <a href="@Url.Action("ShowCart","Cart")"><input type="button" class="GoToCartBtn" value="Go to cart" /></a>
            
        </td>
           <td><a href="@Url.Action("OrderHistory","Login")"><input type="button" class="GoToCartBtn" value="Order history" /></a></td>
        </tr>
    </table>

</div>

