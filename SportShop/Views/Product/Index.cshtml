@model IEnumerable<SportShop.Models.Product>

@{
    ViewBag.Title = "Trang chu";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/JavaScript.js"></script>
<h2>Index</h2>


<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 cold-sm-6">
                <div class="product">
                    <div class="thumbnail"><img src= @Html.DisplayFor(modelItem => item.ImagePro) alt="Alternate Text" /></div>
                    <div class="proDescription">
                        <p> @Html.DisplayFor(modelItem => item.Price)</p>
                        <p> @Html.DisplayFor(modelItem => item.NamePro)</p>
                        <p> @Html.DisplayFor(modelItem => item.Category)</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<table class="table">
   

</table>
